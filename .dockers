[nacos]:
=============================================================================================
    [root]# docker pull nacos/nacos-server
    [root]# mkdir -p /home/nacos/logs
    [root]# mkdir -p /home/nacos/conf
    [root]# docker run --name nacos -p 8848:8848 -d nacos/nacos-server
    [root]# docker cp nacos:/home/nacos/logs/ /home/nacos/logs/
    [root]# docker cp nacos:/home/nacos/conf/ /home/nacos/conf/
    [root]# docker rm -f nacos
    [root]# docker run -d \
            --name nacos \
            -p 8848:8848 -p 9848:9848 -p 9849:9849 \
            --privileged=true \
            -e JVM_XMS=256m \
            -e JVM_XMX=256m \
            -e MODE=standalone \
            -v /home/nacos/logs/:/home/nacos/logs \
            -v /home/nacos/conf/:/home/nacos/conf \
            --restart=always \
            nacos/nacos-server
    [root]# firewall-cmd --zone=public --add-port=8848/tcp --permanent
    [root]# firewall-cmd --zone=public --add-port=9848/tcp --permanent
    [root]# firewall-cmd --zone=public --add-port=9849/tcp --permanent
    [root]# firewall-cmd --reload
    [root]# systemctl restart docker

