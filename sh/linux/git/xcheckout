checkout() {
  echored "+ git checkout $@"
  git checkout "$@"
  echopurple "+ xbranch"
  xbranch
  exit
}

if [ -z "$1" ]; then
  branches=$(xbranch --format="%(refname:lstrip=2)")
  IFS=$'\n' read -rd '' -a array <<< "$branches"

  echo "All branch in local (exclude for remote branch):"
  count=1
  for element in "${array[@]}"; do
    echo "    [$count] - $element"
    ((count++))
  done

  read -p "Switch branch of number: " number
  branch="${array[((number - 1))]}"

  echopurple "+ xcheckout $branch"
  echo "Checkout to branch '$branch' for you"
  checkout $branch
fi

checkout "$@"
